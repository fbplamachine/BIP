<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:fillViewport="true"
    android:orientation="vertical"
    android:paddingTop="@dimen/dp_6">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/dp_24"
        >


        <androidx.cardview.widget.CardView
            android:layout_marginBottom="@dimen/dp_12"
            android:layout_above="@id/textGoback"
            android:id="@+id/cardRegister"
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:elevation="@dimen/dp_2"
            app:cardCornerRadius="@dimen/dp_6"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:paddingVertical="@dimen/dp_24"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="@dimen/dp_12"
                >



                <TextView
                    android:id="@+id/textOrLoginWith"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_6"
                    android:gravity="center_horizontal"
                    android:textColor="#797979"
                    android:text="@string/reset_password_for_your_account" />



                <EditText
                    android:id="@+id/userEmailLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/dp_2"
                    android:layout_marginTop="@dimen/dp_18"
                    android:inputType="textEmailAddress"
                    android:background="@drawable/bg_btn_google_fb"
                    android:drawableStart="@drawable/ic_baseline_email_24"
                    android:drawablePadding="@dimen/dp_10"
                    android:elevation="@dimen/dp_2"
                    android:hint="@string/enter_your_registered_email_id"
                    android:textSize="@dimen/sp_12"
                    android:paddingHorizontal="@dimen/dp_4"
                    android:paddingVertical="@dimen/dp_8" />




                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btnLogin"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_marginBottom="@dimen/dp_12"
                    android:background="@drawable/bg_register_btn"
                    android:gravity="center"
                    android:paddingHorizontal="@dimen/dp_16"
                    android:text="@string/reset_password"
                    android:textAllCaps="false"
                    android:textColor="@color/white" />


            </LinearLayout>


        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/textGoback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_6"
            android:gravity="center_horizontal"
            android:paddingHorizontal="@dimen/dp_6"
            android:text="@string/go_back"
            android:textSize="@dimen/sp_14"
            app:drawableLeftCompat="@drawable/ic_baseline_arrow_back_ios_24" />



    </RelativeLayout>
</ScrollView>